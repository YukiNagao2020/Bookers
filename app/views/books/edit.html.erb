<h1>Editing Book</h1>
<%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>

  <% if @book.errors.any? %>
  <div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="title">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="contents">
    <h4>Body</h4>
    <%= f.text_area :body %><br>
  </div>
  
    <%= f.submit 'Update Book' %><br>
  

  <%= link_to "Show", book_path(@book.id) %>
  <span>|</span>
  <%= link_to "Back", books_path %>

<% end %>
