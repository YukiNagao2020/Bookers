<h1>Editing Book</h1>
<%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>

  <% if @book.errors.any? %>
  <p style="color:#ff0000"><%= @book.errors.count %> error(s) prohibited this book from being saved. </p>
  <div>
    <ul style="color:#ff0000">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

 
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %><br>
 </div>
  
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to "Show", book_path(@book.id) %>
  <span>|</span>
  <%= link_to "Back", books_path %>

<% end %>
