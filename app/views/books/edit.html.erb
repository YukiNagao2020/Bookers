<h1>Editing Book</h1>
<%= form_for @book, url:"/books/#{@book.id}", local:true do |f| %>

 <% if @book.errors.any? %>
      <ul>
        <% @book.errors.full_messages.each do |book| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  
 
<% end %>
